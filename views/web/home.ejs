                            <figure class="image ">
                                <img src="<%= web.image %>">
                            </figure>
                        </div>
                        <div class="card-content">
                            <a href="http://localhost:1337/web/read/<%= web.id %>">
                                <strong>
                                    <p><%= web.restaurant %></p>
                                </strong>
                            </a>
                            <p><%= web.title %></p>
                            <br>
                            <p>Coins: <%= web.coins %></p>

                        </div>
                    </div>
                    <br>
                    <% }); %>
                </div>
            </div>
            <div class="column">
