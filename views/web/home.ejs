                    <strong>
                        <div>New Territories</div>
                    </strong>
                    <% NT.forEach( function(web) { %>
                    <div class="card">
                        <div class="card-image">
                            <figure class="image">
                                <img src="<%= web.image %>">
                            </figure>
                        </div>
                        <div class="card-content">
                            <a href="http://localhost:1337/web/read/<%= web.id %>">
                                <strong>
                                    <p><%= web.restaurant %></p>
